@model TesFullC.Models.LoginModel;
<h1>Login</h1>
<form asp-action="Login" method="Post" asp-route-returnUrl="@ViewBag.ReturnUrl">
    <p style="color: red">@ViewBag.Error</p>
    <p>Email: <input asp-for="@Model.Email" /></p>
    <p>Password: <input asp-for="@Model.Password" type="password" /></p>
    <p><input type="checkbox" value="true" asp-for="@Model.RememberMe" />&nbsp;Remember Me</p>
    <p><button>Login</button></p>
</form>